{
  "name": "iat355-rose-plot",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build:copy": "copy src/**/*.{html,jpg,png,ico,js} dist",
    "watch:copy": "onchange 'src/**/*.{html,jpg,png,ico,js}' -v -- npm run build:copy",
    "build:css": "node-sass src/css -o dist/css",
    "watch:css": "node-sass -w src/css -o dist/css",
    "livereload": "livereload dist -w 500",
    "server": "http-server dist -p 8080 -o",
    "build": "npm run clean && run-s build:*",
    "watch": "npm run build && run-p watch:* server livereload"
  },
  "author": "@charliecm",
  "license": "MIT",
  "devDependencies": {
    "copy": "^0.3.0",
    "http-server": "^0.9.0",
    "livereload": "^0.6.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1"
  }
}
